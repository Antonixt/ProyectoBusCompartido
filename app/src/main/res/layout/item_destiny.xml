<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/viewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_top_destiny"
            android:text="@string/text_tittle_destiny"
            android:fontFamily="@font/montserrat_bold" />

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_top_destiny"
            android:layout_marginBottom="@dimen/activity_margin_bottom_destiny"
            app:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@android:color/white"
                    android:layout_width="@dimen/width_image_destiny"
                    android:layout_height="@dimen/height_image_destiny"
                    android:src="@drawable/destinity_main" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_field">

                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="@dimen/text_size_subtitle"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_left_destiny"
                            android:layout_marginRight="16dp"
                            android:text="Cusco"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_regular" />

                        <TextView
                            android:textSize="@dimen/text_size_body3"
                            android:textColor="@color/text_opacity"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from_text"
                            android:fontFamily="@font/montserrat_regular" />

                        <TextView
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold"
                            android:textColor="@color/fuscia"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_margin_left_destiny"
                            android:layout_marginRight="@dimen/activity_margin_right_destiny"
                            android:text="S/. 89.00"
                            android:fontFamily="@font/montserrat_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
