<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/background_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/card_radius"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/card_radius"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_margin_short"
                    android:src="@drawable/asiento_lateral" />

                <TextView
                    android:textSize="@dimen/text_size_title2"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_bus_bed"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold" />

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:textSize="@dimen/text_size_title2"
                        android:textStyle="bold"
                        android:textColor="@color/fuscia"
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 81.00"
                        android:fontFamily="@font/montserrat_bold" />

                    <TextView
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textColor="@color/fuscia"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desde"
                        android:fontFamily="@font/montserrat_bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:textSize="@dimen/text_size_caption"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtChairs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="10 asientos libres"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_room_black_24"
                    app:tint="@color/tint_gray" />

                <TextView
                    android:textSize="@dimen/text_size_caption"
                    android:textStyle="bold"
                    android:textColor="@color/text_opacity"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Terminal Plaza Norte"
                    android:fontFamily="@font/montserrat_bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/background_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_field">

                <TextView
                    android:textSize="@dimen/text_size_caption"
                    android:textColor="@color/text_opacity"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtFooter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Salida: 12:45 pm | Llegada: 12:45 pm, Mar 25"
                    android:fontFamily="@font/montserrat_regular" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
